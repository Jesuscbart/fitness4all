rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla para el documento del usuario
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Regla para la subcolecci贸n measurements
      match /measurements/{measurementId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Regla para la subcolecci贸n calendars
      match /calendars/{calendarId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Regla para la subcolecci贸n questionnaires
      match /questionnaires/{questionnaireId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Regla para los planes de ejercicio
      match /exercise-plans/{planId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Permitir acceso a los planes de nutrici贸n del usuario
      match /nutrition-plans/{planId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}